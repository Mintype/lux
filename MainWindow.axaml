<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="lux.MainWindow"
        Title="lux">
    
    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Styles>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> <!-- Left panel (for controls) -->
            <ColumnDefinition Width="*"/>   <!-- Center area (for photo) -->
            <ColumnDefinition Width="200"/> <!-- Right panel (for adjustments) -->
        </Grid.ColumnDefinitions>

        <!-- Top Dock Panel -->
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenImage_Click"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Export"/>
                <MenuItem Header="Exit" Click="ExitProgram"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <MenuItem Header="Crop"/>
                <MenuItem Header="Rotate"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Zoom In" Click="ZoomIn"/>
                <MenuItem Header="Zoom Out" Click="ZoomOut"/>
                <MenuItem Header="Full Screen" Click="FullScreen"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
                <MenuItem Header="Check for Updates"/>
            </MenuItem>
        </Menu>


        <!-- Left panel (controls) -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#333" Width="200">
            <Button Content="Crop" Foreground="White" Background="#444"/>
            <Button Content="Rotate" Foreground="White" Background="#444"/>
            <Button Content="Export" Foreground="White" Background="#444"/>
        </StackPanel>


        <!-- Center panel with scroll + zoom -->
        <Border Grid.Row="1" Grid.Column="1" Background="#666" Margin="10">
            <ScrollViewer x:Name="ImageScrollViewer" ClipToBounds="True">
                <Canvas x:Name="ImageCanvas">
                    <Image x:Name="PhotoImage" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"/>
                </Canvas>
            </ScrollViewer>
        </Border>


        <!-- Right panel (adjustments) -->
        <StackPanel Grid.Row="1" Grid.Column="2" Background="#333" Width="200">
            <Button Content="Brightness" Foreground="White" Background="#444"/>
            <Button Content="Contrast" Foreground="White" Background="#444"/>
            <Button Content="Saturation" Foreground="White" Background="#444"/>
            <Button Content="Exposure" Foreground="White" Background="#444"/>
        </StackPanel>
    </Grid>
</Window>
